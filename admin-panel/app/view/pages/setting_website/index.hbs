<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Webiste Setting</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Settings</a></li>
                    <li class="breadcrumb-item active">Website</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title flex-grow-1 mb-0">Main Settings</h5>
                <div class="d-flex gap-1 flex-wrap">
                    {{#if data.permission.create}}
                    <button type="button" class="btn btn-primary create-btn" data-bs-toggle="modal"
                        data-bs-target="#api-key-modal"><i class="ri-add-line align-bottom me-1"></i> Add API
                        Key</button>
                    {{/if}}
                </div>
            </div>
            <div class="card-body">
                <form id="frmUpdateSettingWeb" autocomplete="off" class="needs-validation" method="post" novalidate>
                    <div class="row">
                        <input type="hidden" id="webId" name="webId" value="{{web.id}}">
                        <input type="hidden" id="current_favicon" name="current_favicon" value="{{web.webFavicon}}">
                        <input type="hidden" id="current_logo" name="current_favicon" value="{{web.webLogo}}">
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label for="firstnameInput" class="form-label">Title Website</label>
                                <input type="text" class="form-control" required name="title_web"
                                    placeholder="Enter Title Website" value="{{web.webTitle}}">
                                <div class="invalid-feedback">
                                    Nama Web Tidak Boleh Kosong
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3 pb-2">
                                <label for="exampleFormControlTextarea" class="form-label">Description Website</label>
                                <textarea class="form-control" name="description_website"
                                    placeholder="Enter your description" rows="3">{{web.webTitle}}</textarea>
                            </div>
                        </div>
                        <!--end col-->
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="author" class="form-label">Author Website</label>
                                <input type="text" class="form-control" name="author" placeholder="Author Website"
                                    value="{{web.webAuthor}}">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="favicon" class="form-label">Favicon</label>
                                <input type="file" class="form-control" name="favicon"
                                    placeholder="Upload Your Favicon">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="logo" class="form-label">Logo</label>
                                <input type="file" class="form-control" name="logo" placeholder="Upload Your Logo">
                            </div>
                        </div>
                        <!--end col-->

                        <!--end col-->

                        <!--end col-->

                        <!--end col-->

                        <!--end col-->

                        <!--end col-->

                        <!--end col-->

                        <!--end col-->

                        <!--end col-->
                        <div class="col-lg-12">
                            <div class="hstack gap-2 justify-content-end">
                                <button type="submit" class="btn btn-primary">Updates</button>
                                <button type="button" class="btn btn-soft-secondary">Cancel</button>
                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </form>
            </div>
        </div>
    </div>
</div>